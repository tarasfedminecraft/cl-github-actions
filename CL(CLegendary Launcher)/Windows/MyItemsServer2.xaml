<UserControl x:Name="UserContorl5" x:Class="CL_CLegendary_Launcher_.MyItemsServer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CL_CLegendary_Launcher_"
             mc:Ignorable="d" Height="108" Width="885" Foreground="White">

    <Grid x:Name="MainGirdItem4">

        <Border x:Name="BG" 
                CornerRadius="15"
                BorderBrush="{Binding BorderBrush, ElementName=UserContorl5}"       
                BorderThickness="{Binding BorderThickness, ElementName=UserContorl5}" 
                Background="{DynamicResource MainBackgroundBrushServer}"/>

        <Border x:Name="BGParther" BorderThickness="0" CornerRadius="15" ClipToBounds="True">
            <Border.Background>
                <ImageBrush Stretch="UniformToFill"/>
            </Border.Background>
        </Border>

        <Border CornerRadius="15" Opacity="0.4" IsHitTestVisible="False"/>

        <Border x:Name="FonIcon" BorderThickness="1" HorizontalAlignment="Left" 
                Height="90" Width="90" Margin="10,10,0,0" VerticalAlignment="Top" 
                Background="#FF303030" CornerRadius="6">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.3"/>
            </Border.Effect>
            <Image x:Name="MainIcon3" RenderOptions.BitmapScalingMode="LowQuality" Stretch="UniformToFill"/>
        </Border>

        <TextBlock x:Name="TitleMain1" Text="Title" 
                   HorizontalAlignment="Left" Margin="110,10,0,0" VerticalAlignment="Top" 
                   Width="470" Height="28"
                   Foreground="{DynamicResource MainForegroundBrush}" 
                   FontFamily="Inter" FontSize="20" FontWeight="Bold" 
                   TextTrimming="CharacterEllipsis">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.8" Color="Black"/>
            </TextBlock.Effect>
        </TextBlock>

        <TextBlock x:Name="DescriptionMain2" Text="Description text goes here..." 
                   HorizontalAlignment="Left" Margin="110,42,0,0" VerticalAlignment="Top" 
                   Width="460" Height="56"
                   Foreground="{DynamicResource MainForegroundBrush}" 
                   FontFamily="Inter" FontSize="14" TextWrapping="Wrap" 
                   TextTrimming="CharacterEllipsis" Opacity="0.9">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.8" Color="Black"/>
            </TextBlock.Effect>
        </TextBlock>

        <Border x:Name="OpenInfoServerPanel" BorderThickness="1" HorizontalAlignment="Left" 
                Height="24" Margin="581,50,0,0" VerticalAlignment="Top" Width="294" 
                Background="{DynamicResource MainBackgroundButton}" CornerRadius="6"
                Cursor="Hand" ToolTip="Інформація про сервер">
            <TextBlock x:Name="OpenInfoServerTXT" Text="Перейти на сторінку" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Foreground="{DynamicResource MainForegroundBrush}"/>
        </Border>

        <Border x:Name="OnlinePlayerPanel" BorderThickness="1" HorizontalAlignment="Left" 
                Height="24" Margin="581,79,0,0" VerticalAlignment="Top" Width="75" 
                Background="{DynamicResource MainBackgroundButton}" CornerRadius="6"
                Cursor="Hand" ToolTip="Онлайн">
            <TextBlock x:Name="OnlinePlayerTXT" Text="5/50" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Foreground="{DynamicResource MainForegroundBrush}"/>
        </Border>

        <Border x:Name="IPServerPanel" BorderThickness="1" HorizontalAlignment="Left" 
                Height="24" Margin="661,79,0,0" VerticalAlignment="Top" Width="132" 
                Background="{DynamicResource MainBackgroundButton}" CornerRadius="6"
                Cursor="Hand" ToolTip="Натисніть щоб скопіювати" MouseDown="IPServerTXT_MouseDown">
            <TextBlock x:Name="IPServerTXT" Text="bober.fun" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Foreground="{DynamicResource MainForegroundBrush}" TextTrimming="CharacterEllipsis"/>
        </Border>

        <Border x:Name="PlayServerPanel1" BorderThickness="1" HorizontalAlignment="Left" 
                Height="24" Margin="800,79,0,0" VerticalAlignment="Top" Width="75" 
                Background="{DynamicResource MainBackgroundButton}" CornerRadius="6"
                Cursor="Hand" ToolTip="Натисніть щоб почати грати">
            <TextBlock x:Name="PlayServerTXT1" Text="Грати" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Foreground="{DynamicResource MainForegroundBrush}"/>
        </Border>

    </Grid>
</UserControl>