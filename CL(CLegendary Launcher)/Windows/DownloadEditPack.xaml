<Window x:Name="MainWin" x:Class="CL_CLegendary_Launcher_.Windows.DownloadEditPack"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CL_CLegendary_Launcher_.Windows"
        mc:Ignorable="d"
        Title="DownloadEditPack" Height="395" Width="583" FontFamily="Inter 18pt 18pt" WindowStyle="None" Icon="/Icon/IconCL(Winter).ico" Foreground="{DynamicResource MainForegroundBrush}" Background="{DynamicResource MainBackgroundBrush}" ResizeMode="NoResize">
    <Grid x:Name="MainGrid" Background="{DynamicResource MainBackgroundBrush}">
        <Border x:Name="BorderTool" BorderThickness="1" HorizontalAlignment="Center" Height="18" VerticalAlignment="Top" Width="594" Background="{DynamicResource MainBackgroundBrush}" CornerRadius="4,4,4,4" MouseDown="BorderTool_MouseDown" Margin="0,-2,0,0">
            <TextBlock x:Name="NameWin" TextWrapping="Wrap" Text="Завантаження &lt;тип моду&gt; у збірку &lt;назва&gt;" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource MainForegroundBrush}" FontSize="9"/>
        </Border>
        <Border x:Name="BordrExitTXT"
            BorderThickness="1"
            Margin="0,0,2,0"
            Background="#FFC50808"
            Width="14"
            Height="14"
            CornerRadius="10,10,10,10"
            HorizontalAlignment="Right"
            VerticalAlignment="Top" Visibility="Hidden">
            <Border.RenderTransform>
                <TransformGroup>
                    <!-- Приведені трансформи залишені як приклад.
                 Встанови властивості (Angle, X, Y тощо) за потреби -->
                    <SkewTransform AngleX="0" AngleY="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform X="0" Y="0"/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <TextBlock x:Name="ExitTXT" Text="X"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontWeight="Bold"
            Foreground="{DynamicResource MainForegroundBrush}"
            Cursor="Hand"
            MouseDown="ExitLauncher_MouseDown"
            MouseEnter="ExitLauncher_MouseEnter"
            MouseLeave="ExitLauncher_MouseLeave" Margin="570,0,0,0" Height="15"/>
        <Border x:Name="ServerSearch2" BorderThickness="1" CornerRadius="8,8,8,8" Margin="4,21,79,344" Background="{DynamicResource MainBackgroundBrushServer}" Width="500">
            <ui:TextBox x:Name="SearchSystem" PlaceholderText="Пошук..." TextWrapping="Wrap" Margin="30,-1,5,-1" Background="{x:Null}" Foreground="{DynamicResource MainForegroundBrush}" BorderBrush="{x:Null}" CaretBrush="White" VerticalContentAlignment="Center" TextChanged="SearchSystem_TextChanged"/>
        </Border>
        <Image x:Name="IconSelectVersion_Копировать11" RenderOptions.BitmapScalingMode="HighQuality" HorizontalAlignment="Left" Height="22" VerticalAlignment="Top" Width="22" Source="/Assets/search.png" Cursor="Hand" Stretch="Fill" ToolTip="ГРАТИ"  Margin="10,25,0,0"/>
        <Border x:Name="SelectSiteModPacks" BorderThickness="1" HorizontalAlignment="Left" Height="30" Margin="509,21,0,0" VerticalAlignment="Top" Width="64" CornerRadius="8,8,8,8" Background="{DynamicResource MainBackgroundBrushServer}">
            <Border x:Name="SelectSiteModPacksNow" BorderThickness="1" Background="{DynamicResource MainBackgroundBrush}" CornerRadius="6,6,6,6" Margin="4,1,32,1" Width="26" Height="26"/>
        </Border>
        <Image x:Name="ModrinthSite" RenderOptions.BitmapScalingMode="HighQuality" HorizontalAlignment="Left" Height="22" Margin="516,25,0,0" VerticalAlignment="Top" Width="22" Source="/Assets/1200-818013157 1.png" Cursor="Hand" MouseDown="ModrinthSite_MouseDown"/>
        <Image x:Name="CurseForgeSite" RenderOptions.BitmapScalingMode="HighQuality" HorizontalAlignment="Left" Height="22" Margin="545,25,0,0" VerticalAlignment="Top" Width="22" Source="/Assets/curseforge-logo-3499974474.png" Cursor="Hand" MouseDown="CurseForgeSite_MouseDown"/>
        <Border x:Name="CreateModPacksButton" BorderThickness="1" HorizontalAlignment="Center" Height="30" Margin="0,355,0,0" VerticalAlignment="Top" Width="571" Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="8,8,8,8" MouseDown="CreateModPacksButton_MouseDown">
            <Label x:Name="CreateModPacksButtonTXT" Content="Додати" HorizontalAlignment="Center" Height="34" VerticalAlignment="Center" Width="538" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Inter 18pt 18pt" FontSize="16" Cursor="Hand" Foreground="{DynamicResource MainForegroundBrush}" MouseDown="CreateModPacksButtonTXT_MouseDown"/>
        </Border>
        <Grid x:Name="ModsDonwloadAddPack" Margin="0,53,0,0">
            <Border x:Name="LoaderSelectBorder"
        BorderThickness="1"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Width="69"
        Height="28"
        Margin="5,89,0,0"
        CornerRadius="8"
        Background="{DynamicResource MainBackgroundBrushServer}">

                <ui:DropDownButton x:Name="LoaderButton"
                       Content="Лоудер"
                       Foreground="{DynamicResource MainForegroundBrush}"
                       Background="Transparent"
                       BorderBrush="Transparent"
                       FontSize="11"
                       Padding="0"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       HorizontalContentAlignment="Center"
                       Cursor="Hand">
                </ui:DropDownButton>
            </Border>
            <Border x:Name="ListModsBorder" BorderThickness="1" HorizontalAlignment="Left" Height="79" Margin="5,118,0,0" VerticalAlignment="Top" Width="70" CornerRadius="8,8,8,8" Background="{DynamicResource MainBackgroundBrushServer}">
                <ui:ListView x:Name="ListModsList" HorizontalAlignment="Center" Height="78" VerticalAlignment="Center" Width="70" d:ItemsSource="{d:SampleData ItemCount=5}" BorderBrush="{x:Null}" Foreground="{DynamicResource MainForegroundBrush}" Background="{x:Null}" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Hidden" Cursor="Hand"/>
            </Border>
            <Border x:Name="AddModsInModPackBorder" BorderThickness="1" HorizontalAlignment="Left" Height="300" Margin="385,1,0,0" VerticalAlignment="Top" Width="191" CornerRadius="8,8,8,8" Background="{DynamicResource MainBackgroundBrushServer}">
                <ui:ListView x:Name="AddModsInModPackList" HorizontalAlignment="Center" Height="279" VerticalAlignment="Center" Width="191" FontSize="10" BorderBrush="{x:Null}" Foreground="{DynamicResource MainForegroundBrush}" Background="{x:Null}" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Hidden" Cursor="Hand"/>
            </Border>
            <Border x:Name="VersionVanilBorder" BorderThickness="1" HorizontalAlignment="Left" Height="84" Margin="5,1,0,0" VerticalAlignment="Top" Width="70" CornerRadius="8,8,8,8" Background="{DynamicResource MainBackgroundBrushServer}">
                <ui:ListView x:Name="VersionVanil" HorizontalAlignment="Center" Height="84" VerticalAlignment="Top" Width="70" d:ItemsSource="{d:SampleData ItemCount=5}" BorderBrush="{x:Null}" Foreground="{DynamicResource MainForegroundBrush}" Background="{x:Null}" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Hidden" Cursor="Hand"/>
            </Border>
            <ListBox x:Name="ModsDowloadList" Margin="80,1,203,50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{DynamicResource MainForegroundBrush}" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
        </Grid>
        <Grid x:Name="GirdModsDowload" Background="{DynamicResource MainBackgroundBrush}" Margin="-2,-13,0,0" Cursor="Hand" ToolTip="Натисніть щоб повернутись" MouseDown="GirdModsDowload_MouseDown" Visibility="Hidden"/>
        <Grid x:Name="MenuInstaller" HorizontalAlignment="Left" Height="206" VerticalAlignment="Top" Width="254" Margin="163,77,0,0" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border BorderThickness="1" Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="14,14,14,14"/>
            <Border x:Name="DowloadMod" BorderThickness="1" HorizontalAlignment="Center" Height="29" Margin="0,169,0,0" VerticalAlignment="Top" Width="234" Background="{DynamicResource MainBackgroundButton}" CornerRadius="8,8,8,8" RenderTransformOrigin="0.573,0.458">
                <Label x:Name="DowloadTXT" Content="Додати" Foreground="{DynamicResource MainForegroundBrush}" Background="{x:Null}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,-1,0,-1" Cursor="Hand" ToolTip="Натисніть щоб встановити мод" MouseDown="DowloadTXT_MouseDown" FontFamily="Inter 18pt 18pt"/>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="83" Margin="0,76,0,0" VerticalAlignment="Top" Width="235" CornerRadius="8,8,8,8" Background="{DynamicResource MainBackgroundBrush}">
                <ui:ListView x:Name="VersionMods" d:ItemsSource="{d:SampleData ItemCount=5}" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{DynamicResource MainForegroundBrush}" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Hidden" FontSize="8"/>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="30" Margin="0,41,0,0" VerticalAlignment="Top" Width="235" CornerRadius="8,8,8,8" Background="{DynamicResource MainBackgroundBrush}">
                <Label x:Name="GameVersionMinecraft_Копировать" Content="Мод" HorizontalAlignment="Center" Height="66" VerticalAlignment="Center" Width="290" Background="{x:Null}" Foreground="{DynamicResource MainForegroundBrush}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14" FontFamily="Inter 18pt 18pt"/>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="30" Margin="0,6,0,0" VerticalAlignment="Top" Width="234" CornerRadius="8,8,8,8" Background="{DynamicResource MainBackgroundBrush}">
                <Label x:Name="TitleModsDowload" Content="Вибір версії моду" HorizontalAlignment="Center" Height="66" VerticalAlignment="Center" Width="290" Background="{x:Null}" Foreground="{DynamicResource MainForegroundBrush}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14" FontFamily="Inter 18pt 18pt"/>
            </Border>
        </Grid>

    </Grid>
</Window>
