<ui:FluentWindow x:Name="MainWin" x:Class="CL_CLegendary_Launcher_.Windows.DownloadEditPack"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CL_CLegendary_Launcher_.Windows"
        mc:Ignorable="d"
        Title="DownloadEditPack" Height="450" Width="700" 
        FontFamily="Inter" WindowStyle="None" 
        Icon="/Icon/IconCL(Common).png" 
        Foreground="{DynamicResource MainForegroundBrush}" 
        Background="{DynamicResource MainBackgroundBrush}" 
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica" BorderThickness="0">

    <Window.Resources>
        <Style x:Key="ProviderIconStyle" TargetType="Image">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
            <Setter Property="Opacity" Value="0.6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="1.0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="Transparent" MouseDown="BorderTool_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="NameWin" Text="Менеджер модів" 
                       VerticalAlignment="Center" Margin="10,0,0,0" 
                       FontSize="12" Opacity="0.7" Foreground="{DynamicResource MainForegroundBrush}"/>

            <ui:Button Grid.Column="1" 
                       Content="✕" 
                       Appearance="Transparent"
                       Foreground="{DynamicResource MainForegroundBrush}"
                       Width="40" Height="30" 
                       Padding="0" VerticalAlignment="Top" 
                       Click="ExitLauncher_MouseDown" Cursor="Hand"/>
        </Grid>

        <Grid Grid.Row="1" Margin="10,5,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ui:TextBox x:Name="SearchSystem" 
                        PlaceholderText="Пошук модів..." 
                        Icon="{ui:SymbolIcon Search24}"
                        VerticalAlignment="Center" Height="36"
                        TextChanged="SearchSystem_TextChanged" Background="{DynamicResource MainBackgroundBrushServer}" Foreground="{DynamicResource MainForegroundBrush}"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0">
                <Border x:Name="SelectSiteModPacks" 
                        Background="{DynamicResource MainBackgroundBrushServer}" 
                        CornerRadius="6" Padding="5" Height="36">
                    <StackPanel Orientation="Horizontal">
                        <Image x:Name="ModrinthSite" Source="/Assets/1200-818013157 1.png" 
                    Width="20" Height="20" Margin="0,0,8,0" Cursor="Hand" 
                            RenderOptions.BitmapScalingMode="HighQuality" MouseDown="ModrinthSite_MouseDown"
                            ToolTip="Шукати на Modrinth"
                            Opacity="1.0"/>
                        <Image x:Name="CurseForgeSite" Source="/Assets/curseforge-logo-3499974474.png" 
                            Width="20" Height="20" Cursor="Hand" 
                            RenderOptions.BitmapScalingMode="HighQuality" MouseDown="CurseForgeSite_MouseDown"
                            ToolTip="Шукати на CurseForge"
                            Opacity="0.5"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Margin="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="180"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <ui:DropDownButton x:Name="LoaderButton" Content="Loader" Foreground="{DynamicResource MainForegroundBrush}" BorderBrush="{x:Null}" Background="{DynamicResource MainBackgroundButton}" />

                <Border Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="6" Padding="0,5">
                    <ui:ListView x:Name="ListModsList" Height="150" 
                                 d:ItemsSource="{d:SampleData ItemCount=5}" 
                                 SelectionMode="Single" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Foreground="{DynamicResource MainForegroundBrush}"/>
                </Border>

                <Border Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="6" Padding="0,5">
                    <ui:ListView x:Name="VersionVanil" Height="100" 
                                 d:ItemsSource="{d:SampleData ItemCount=5}" 
                                 SelectionMode="Single" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Foreground="{DynamicResource MainForegroundBrush}"/>
                </Border>
            </StackPanel>

            <Grid Grid.Column="1" Margin="10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="{x:Null}">
                    <ListBox x:Name="ModsDowloadList" 
                             Background="{x:Null}" BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             d:ItemsSource="{d:SampleData ItemCount=10}" Foreground="{DynamicResource MainForegroundBrush}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Margin" Value="0,2"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Border>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                    <ui:Button x:Name="BtnPrevPage" 
                               Icon="{ui:SymbolIcon ArrowLeft24}" 
                               Width="40" Height="30" 
                               Click="BtnPrevPage_Click" 
                               IsEnabled="False"
                               Appearance="Secondary" 
                               Margin="0,0,10,0" Background="{DynamicResource MainBackgroundButton}" BorderBrush="{x:Null}" Foreground="{DynamicResource MainForegroundBrush}"/>

                    <TextBlock x:Name="TxtPageNumber" Text="1" VerticalAlignment="Center" 
                               Foreground="{DynamicResource MainForegroundBrush}" FontWeight="Bold" FontSize="14"/>

                    <ui:Button x:Name="BtnNextPage" 
                               Icon="{ui:SymbolIcon ArrowRight24}" 
                               Width="40" Height="30" 
                               Click="BtnNextPage_Click"
                               Appearance="Secondary" 
                               Margin="10,0,0,0" Background="{DynamicResource MainBackgroundButton}" BorderBrush="{x:Null}" Foreground="{DynamicResource MainForegroundBrush}"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="До черги:" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="{DynamicResource MainForegroundBrush}"/>
                <Border Grid.Row="1" Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="6">
                    <ui:ListView x:Name="AddModsInModPackList" 
                                 d:ItemsSource="{d:SampleData ItemCount=3}" 
                                 FontSize="11" Foreground="{DynamicResource MainForegroundBrush}"/>
                </Border>
            </Grid>
        </Grid>

        <Border Grid.Row="3" Padding="10">
            <ui:Button x:Name="CreateModPacksButton" 
                       Content="Завантажити та Додати" 
                       Icon="{ui:SymbolIcon ArrowDownload24}"
                       Appearance="Primary" 
                       HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                       FontSize="14" Cursor="Hand"
                       Click="CreateModPacksButton_MouseDown" Background="{DynamicResource MainBackgroundButton}" BorderBrush="{x:Null}" Foreground="{DynamicResource MainForegroundBrush}"/>
        </Border>
        <Grid x:Name="MenuInstaller" Background="#99000000" Grid.RowSpan="4" Visibility="Collapsed">
            <Border Background="Transparent" MouseDown="GirdModsDowload_MouseDown"/>

            <Border Width="300" Height="250" 
                    Background="{DynamicResource MainBackgroundBrush}" 
                    BorderBrush="{DynamicResource MainBackgroundBrushServer}" BorderThickness="1"
                    CornerRadius="12" Padding="15" 
                    VerticalAlignment="Center" HorizontalAlignment="Center">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Встановлення мода" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>

                    <TextBlock Grid.Row="1" x:Name="TitleModsDowload" 
                               Text="Оберіть версію файлу:" 
                               Margin="0,10,0,5" Opacity="0.7" HorizontalAlignment="Center"/>

                    <Border Grid.Row="2" Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="6">
                        <ui:ListView x:Name="VersionMods" Margin="2"
                                     d:ItemsSource="{d:SampleData ItemCount=5}"/>
                    </Border>

                    <ui:Button Grid.Row="3" x:Name="DowloadTXT" 
                               Content="Встановити" 
                               Appearance="Primary" Margin="0,15,0,0"
                               HorizontalAlignment="Stretch" 
                               Click="DowloadTXT_MouseDown"/>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</ui:FluentWindow>