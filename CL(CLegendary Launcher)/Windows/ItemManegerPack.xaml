<UserControl x:Class="CL_CLegendary_Launcher_.Windows.ItemManegerPack"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:CL_CLegendary_Launcher_.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="108" d:DesignWidth="440"
             Height="108" Width="440"
             TextOptions.TextFormattingMode="Display">

    <Grid x:Name="Gird">

        <Border x:Name="Border" 
                BorderThickness="1" 
                CornerRadius="12"
                Cursor="Hand" Background="{DynamicResource MainBackgroundBrushServer}">

            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="{DynamicResource MainBackgroundBrushServer}"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#15FFFFFF"/>
                            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" x:Name="BorderImage" 
                        Height="86" Width="86" 
                        CornerRadius="8" 
                        Background="{DynamicResource MainBackgroundBrush}" 
                        BorderBrush="#33000000" BorderThickness="1">
                </Border>

                <Grid Grid.Column="1" Margin="15,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="Title" 
                               Text="{Binding Title, FallbackValue='Mod Name'}" 
                               FontFamily="Inter" FontWeight="Bold" FontSize="16" 
                               Foreground="{DynamicResource MainForegroundBrush}" 
                               TextTrimming="CharacterEllipsis" 
                               VerticalAlignment="Top" Margin="0,5,0,0"/>

                    <TextBlock Grid.Row="1" x:Name="Description" 
                               Text="{Binding Description, FallbackValue='Mod description goes here...'}" 
                               FontSize="11" Foreground="Gray" FontFamily="Inter"
                               TextWrapping="Wrap" TextTrimming="CharacterEllipsis" 
                               VerticalAlignment="Top" Margin="0,5,0,0"/>
                </Grid>

                <StackPanel Grid.Column="2" VerticalAlignment="Bottom" Orientation="Horizontal" Margin="0,0,0,5">

                    <ui:ToggleSwitch x:Name="IsOnOffSwitch" 
                 Height="24" Width="54" 
                 FontFamily="Inter 18pt 18pt"
                 Click="Off_OnMods_Click"/>
                    <Border x:Name="DeleteMod" 
                            Height="26" Width="90" 
                            CornerRadius="6" Cursor="Hand"
                            MouseDown="DowloadTXT_MouseDown"
                            BorderThickness="1" 
                            BorderBrush="Transparent" Background="{DynamicResource MainBackgroundButton}">

                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="Background" Value="{DynamicResource MainBackgroundBrush}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#33FF0000"/>
                                        <Setter Property="BorderBrush" Value="#FF5555"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <TextBlock x:Name="DowloadTXT" Text="Видалити" 
                                   Foreground="{DynamicResource MainForegroundBrush}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                                   FontSize="12" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>