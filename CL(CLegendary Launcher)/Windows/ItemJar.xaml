<UserControl x:Name="UserControl" x:Class="CL_CLegendary_Launcher_.Windows.ItemJar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CL_CLegendary_Launcher_.Windows"
             mc:Ignorable="d" 
             Height="108" Width="740">

    <Grid x:Name="GirdMain">

        <Border x:Name="Border" BorderThickness="1" Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="15">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" x:Name="BorderImage" BorderThickness="1" 
                        Height="86" Width="86" 
                        Background="{DynamicResource MainBackgroundBrush}" CornerRadius="6">
                    <Image x:Name="ModIcon" RenderOptions.BitmapScalingMode="HighQuality" Stretch="UniformToFill"/>
                </Border>

                <Grid Grid.Column="1" Margin="15,0,15,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="Title" Text="Mod Name" 
                               FontWeight="Bold" FontSize="20" 
                               Foreground="{DynamicResource MainForegroundBrush}" 
                               TextTrimming="CharacterEllipsis"/>

                    <TextBlock Grid.Row="1" x:Name="Description" 
                               Text="Long description of the mod goes here..." 
                               FontSize="12" Foreground="Gray" 
                               TextWrapping="Wrap" TextTrimming="CharacterEllipsis" 
                               Margin="0,5,0,5"/>

                    <StackPanel Grid.Row="2" Orientation="Horizontal">

                        <StackPanel Orientation="Horizontal" Margin="0,0,15,0" ToolTip="Кількість завантажень">
                            <Path Data="M19,9h-4V3H9v6H5l7,7l7-7z M5,18v2h14v-2H5z" 
              Fill="{DynamicResource MainForegroundBrush}" 
              Stretch="Uniform" Width="14" Height="14" Margin="0,0,5,0"
              VerticalAlignment="Center"/>
                            <TextBlock x:Name="DowloadCountTXT" Text="0" FontSize="11" Foreground="{DynamicResource MainForegroundBrush}" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,15,0" ToolTip="Останнє оновлення">
                            <Path Data="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z" 
              Fill="{DynamicResource MainForegroundBrush}" 
              Stretch="Uniform" Width="14" Height="14" Margin="0,0,5,0"
              VerticalAlignment="Center"/>
                            <TextBlock x:Name="DataUpdateLastTXT" Text="Date" FontSize="11" Foreground="{DynamicResource MainForegroundBrush}" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,15,0" ToolTip="Дата створення">
                            <Path Data="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z" 
              Fill="{DynamicResource MainForegroundBrush}" 
              Stretch="Uniform" Width="14" Height="14" Margin="0,0,5,0"
              VerticalAlignment="Center"/>
                            <TextBlock x:Name="DataCreateModTXT" Text="Date" FontSize="11" Foreground="{DynamicResource MainForegroundBrush}" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" ToolTip="Автор">
                            <Path Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" 
              Fill="{DynamicResource MainForegroundBrush}" 
              Stretch="Uniform" Width="14" Height="14" Margin="0,0,5,0"
              VerticalAlignment="Center"/>
                            <TextBlock x:Name="User_AuthorTXT" Text="Author" FontSize="11" Foreground="{DynamicResource MainForegroundBrush}" VerticalAlignment="Center"/>
                        </StackPanel>

                    </StackPanel>
                </Grid>

                <Border Grid.Column="2" x:Name="DowloadMod" 
        VerticalAlignment="Center"
        Height="30" Width="100" 
        CornerRadius="6" Cursor="Hand" Background="{DynamicResource MainBackgroundButton}">

                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="{DynamicResource MainBackgroundBrush}"/>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF454545"/>

                                    <Setter Property="BorderBrush" Value="White"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <TextBlock x:Name="DowloadTXT" Text="Встановити" 
               Foreground="{DynamicResource MainForegroundBrush}" 
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               FontWeight="Bold" FontSize="12"/>
                </Border>

            </Grid>
        </Border>
    </Grid>
</UserControl>