<Window x:Class="CL_CLegendary_Launcher_.Windows.MascotDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MascotDialog" Height="250" Width="500"
        WindowStyle="None" AllowsTransparency="True" Background="{x:Null}"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Topmost="True" ShowInTaskbar="False" Foreground="{DynamicResource MainForegroundBrush}">

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
                    <ThicknessAnimation Storyboard.TargetProperty="Margin" Storyboard.TargetName="MainBorder" 
                                        From="0,50,0,0" To="0" Duration="0:0:0.4" DecelerationRatio="0.9"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid>
        <Border x:Name="MainBorder" CornerRadius="15" Background="{DynamicResource MainBackgroundBrushServer}" BorderThickness="1" MouseDown="MainBorder_MouseDown">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="MascotColumn" Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image x:Name="MascotImage" Grid.Column="0" 
                       Source="sdsd" 
                       Stretch="Uniform" 
                       VerticalAlignment="Bottom" HorizontalAlignment="Left"
                       Margin="-20,0,0,-10" Height="200" 
                       RenderOptions.BitmapScalingMode="HighQuality" Visibility="Collapsed"/>

                <Grid Grid.Column="1" Margin="10,20,20,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="TitleTxt" Text="Заголовок" 
                               FontFamily="Inter" FontWeight="Bold" FontSize="18" 
                               Foreground="{DynamicResource MainForegroundBrush}" Margin="0,0,0,10"/>

                    <ui:TextBox x:Name="MessageTxt" Text="Тут буде текст повідомлення від маскота..." 
                               FontFamily="Inter 18pt 18pt" FontSize="14" 
                               Foreground="{DynamicResource MainForegroundBrush}" TextWrapping="Wrap" 
                               Grid.Row="1" VerticalAlignment="Center" IsReadOnly="True" Background="{x:Null}" BorderBrush="{x:Null}" SelectionTextBrush="{x:Null}" SelectionBrush="{DynamicResource MainBackgroundProgressBar}" Height="141"/>

                    <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">

                        <Button x:Name="BtnCancel" Content="Ні, чекай" 
                                Click="BtnCancel_Click"
                                Width="100" Height="35"
                                Background="{DynamicResource MainBackgroundButton}" Foreground="White" BorderBrush="#66FFFFFF" BorderThickness="1">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </Button.Resources>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#33FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="BtnOK" Content="Зрозуміло" 
                                Click="BtnOK_Click"
                                Width="120" Height="35"
                                Foreground="White" BorderThickness="0" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="8">
                                                    <Border.Background>
                                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                            <GradientStop Color="#FF17DA1F" Offset="0"/>
                                                            <GradientStop Color="#FF18A61E" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextElement.FontWeight="SemiBold"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Opacity" Value="0.9"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Opacity" Value="0.8"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>

                <TextBlock Text="✕" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" 
                           Foreground="#55FFFFFF" Margin="0,10,10,0" Cursor="Hand" MouseDown="Close_MouseDown" FontSize="14"/>
            </Grid>
        </Border>
    </Grid>
</Window>