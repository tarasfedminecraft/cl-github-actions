<Window x:Name="MainWin" 
        x:Class="CL_CLegendary_Launcher_.Windows.DowloadModPack"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CL - Завантаження та імпорт мод-паків" 
        Height="550" Width="450" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Foreground="{DynamicResource MainForegroundBrush}"
        Loaded="MainWin_Loaded" 
        Background="Transparent" 
        WindowStyle="None" 
        FontFamily="Inter"
        Icon="/Icon/IconCL(Common).png"
        AllowsTransparency="True">

    <Border Background="{DynamicResource MainBackgroundBrush}" CornerRadius="12" BorderThickness="1" BorderBrush="#33808080">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" MouseDown="BorderTool_MouseDown" Background="Transparent">
                <TextBlock Text="CL - Завантаження/Імпорт збірок" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Foreground="{DynamicResource MainForegroundBrush}" 
                           FontSize="12" 
                           Opacity="0.8"/>

                <ui:Button Content="✕" 
                           Appearance="Transparent"
                           Foreground="{DynamicResource MainForegroundBrush}"
                           Width="40" Height="30" 
                           Padding="0" 
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top" 
                           Margin="0,5,5,0"
                           Click="ExitLauncher_MouseDown" 
                           Cursor="Hand"
                           ToolTip="Закрити вікно"/>
            </Grid>

            <Grid Grid.Row="1" Margin="15,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border x:Name="ImportFileModPacks" Grid.Column="0" 
                        Height="32" Width="90" Margin="0,0,10,0"
                        Background="{DynamicResource MainBackgroundBrushServer}" 
                        CornerRadius="8" Cursor="Hand" MouseDown="ImportFileModPacksTXT_MouseDown"
                        ToolTip="Встановити модпак з .zip або .mrpack файлу">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ui:SymbolIcon Symbol="ArrowImport24" FontSize="14" Margin="0,0,5,0"/>
                        <TextBlock Text="Імпорт" FontSize="12" Foreground="{DynamicResource MainForegroundBrush}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Height="32" CornerRadius="8" Background="{DynamicResource MainBackgroundBrushServer}">
                    <Grid>
                        <ui:TextBox x:Name="SearchSystemModsTXT" 
                                    Icon="{ui:SymbolIcon Search48}"  
                                    PlaceholderEnabled="True" 
                                    PlaceholderText="Пошук збірок..."
                                    Background="Transparent" BorderThickness="0" 
                                    Foreground="{DynamicResource MainForegroundBrush}" 
                                    CaretBrush="{DynamicResource MainForegroundBrush}"
                                    VerticalContentAlignment="Center" Padding="5,0,5,0" FontSize="13"
                                    TextChanged="SearchSystemModsTXT_TextChanged"
                                    ToolTip="Введіть назву для пошуку"/>
                    </Grid>
                </Border>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Center">
                    <Border x:Name="SelectSiteModPacks" Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="8" Padding="6">
                        <StackPanel Orientation="Horizontal">
                            <Image x:Name="ModrinthSite" Source="/Assets/1200-818013157 1.png" 
                    Width="20" Height="20" Margin="0,0,8,0" Cursor="Hand" 
                            RenderOptions.BitmapScalingMode="HighQuality" MouseDown="ModrinthSite_MouseDown"
                            ToolTip="Шукати на Modrinth"
                            Opacity="1.0"/>
                            <Image x:Name="CurseForgeSite" Source="/Assets/curseforge-logo-3499974474.png" 
                            Width="20" Height="20" Cursor="Hand" 
                            RenderOptions.BitmapScalingMode="HighQuality" MouseDown="CurseForgeSite_MouseDown"
                            ToolTip="Шукати на CurseForge"
                            Opacity="0.5"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="2" Margin="15,10,15,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Margin="0,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Версія MC:" FontSize="12" FontWeight="SemiBold" Opacity="0.7" Margin="2,0,0,5" Foreground="{DynamicResource MainForegroundBrush}"/>

                    <Border Grid.Row="1" Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="8" Margin="0,0,0,10">
                        <ui:ListView x:Name="VersionVanil" 
                                     Foreground="{DynamicResource MainForegroundBrush}" Background="Transparent" BorderThickness="0"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     SelectionChanged="VersionVanil_SelectionChanged"
                                     FontSize="12"
                                     Padding="5"
                                     d:ItemsSource="{d:SampleData ItemCount=15}"/>
                    </Border>

                    <Border Grid.Row="2" Height="32" Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="8" ToolTip="Тип завантажувача">
                        <ui:DropDownButton x:Name="SelectLoader" Content="Loader" 
                                           Foreground="{DynamicResource MainForegroundBrush}" Background="Transparent" BorderThickness="0"
                                           HorizontalContentAlignment="Center" FontSize="12" Padding="0" Cursor="Hand">
                            <ui:DropDownButton.Flyout>
                                <ContextMenu>
                                    <MenuItem Header="Fabric" Click="MenuItem_Click" Tag="Fabric"/>
                                    <MenuItem Header="Quilt" Click="MenuItem_Click" Tag="Quilt"/>
                                    <MenuItem Header="Forge" Click="MenuItem_Click" Tag="Forge"/>
                                    <MenuItem Header="NeoForge" Click="MenuItem_Click" Tag="NeoForge"/>
                                </ContextMenu>
                            </ui:DropDownButton.Flyout>
                        </ui:DropDownButton>
                    </Border>
                </Grid>

                <Border Grid.Column="1" Background="{x:Null}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ui:ListView x:Name="ModsDowloadList" Grid.Row="0"
                                     Foreground="{DynamicResource MainForegroundBrush}" 
                                     Background="Transparent" 
                                     BorderThickness="0"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     Margin="0,0,0,10"></ui:ListView>

                        <StackPanel x:Name="ModsSearchLoader" Grid.Row="0" Grid.RowSpan="2"
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"
                                    Orientation="Vertical" Visibility="Collapsed" Panel.ZIndex="10">
                            <Border Background="{DynamicResource MainBackgroundBrush}" Opacity="0.9" CornerRadius="12" Padding="25">
                                <StackPanel>
                                    <ui:ProgressRing IsIndeterminate="True" 
                                                     Width="50" Height="50" 
                                                     Foreground="{DynamicResource MainBackgroundProgressBar}"/>
                                    <TextBlock Text="Завантаження..." 
                                               Margin="0,15,0,0"
                                               FontSize="14" 
                                               FontFamily="Inter"
                                               Foreground="{DynamicResource MainForegroundBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <StackPanel x:Name="PaginationPanel" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                            <ui:Button x:Name="PrevPageBtn" 
                                       Icon="{ui:SymbolIcon ArrowLeft24}" 
                                       Click="PrevPageBtn_Click" 
                                       Appearance="Secondary" 
                                       IsEnabled="False" 
                                       Margin="0,0,10,0" 
                                       Width="50" Height="36" 
                                       CornerRadius="8" 
                                       Content="" 
                                       Foreground="{DynamicResource MainForegroundBrush}" 
                                       BorderBrush="{x:Null}" 
                                       Background="{DynamicResource MainBackgroundButton}" 
                                       Cursor="Hand"
                                       ToolTip="Попередня сторінка"/>

                            <Border Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="8" Height="36" Padding="20,0">
                                <TextBlock x:Name="PageNumberText" 
                                           Text="1" 
                                           VerticalAlignment="Center" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="{DynamicResource MainForegroundBrush}"/>
                            </Border>

                            <ui:Button x:Name="NextPageBtn" 
                                       Icon="{ui:SymbolIcon ArrowRight24}" 
                                       Click="NextPageBtn_Click" 
                                       Appearance="Secondary" 
                                       Margin="10,0,0,0" 
                                       Width="50" Height="36" 
                                       CornerRadius="8" 
                                       Content="" 
                                       Background="{DynamicResource MainBackgroundButton}" 
                                       BorderBrush="{x:Null}" 
                                       Foreground="{DynamicResource MainForegroundBrush}" 
                                       Cursor="Hand"
                                       ToolTip="Наступна сторінка"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Row="3" Margin="15,0,15,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="140"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Margin="0,0,10,0" Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="10">
                    <ComboBox x:Name="PackVersionSelector" 
                              DisplayMemberPath="Name"
                              Foreground="{DynamicResource MainForegroundBrush}"
                              Background="Transparent" 
                              BorderThickness="0"
                              VerticalContentAlignment="Center"
                              Padding="10,0"
                              HorizontalAlignment="Stretch"
                              IsEditable="True"
                              IsReadOnly="True"
                              Text="Спочатку оберіть збірку"
                              ToolTip="Оберіть конкретну версію файлу для завантаження" Cursor="Hand"/>
                </Border>

                <Border x:Name="DowloaadModPacksButton" Grid.Column="1"
                        Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="10"
                        Cursor="Hand" MouseDown="DowloaadModPacksButtonTXT_MouseDown"
                        ToolTip="Почати встановлення обраної версії">
                    <TextBlock x:Name="DowloaadModPacksButtonTXT" Text="Завантажити" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" 
                               FontSize="14" FontWeight="Bold" Foreground="{DynamicResource MainForegroundBrush}"/>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF454545"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.6"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                </Border>
            </Grid>

        </Grid>
    </Border>
</Window>