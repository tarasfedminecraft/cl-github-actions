<UserControl x:Class="CL_CLegendary_Launcher_.Windows.ModPackItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CL_CLegendary_Launcher_.Windows"
             mc:Ignorable="d" 
             d:DesignWidth="300" Height="40" 
             Foreground="{DynamicResource MainForegroundBrush}">
    <Border x:Name="Border" BorderThickness="1" 
            Background="{DynamicResource MainBackgroundBrushServer}" 
            CornerRadius="8" Margin="0,0,0,5">

        <Grid Margin="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image x:Name="IconModPack" Grid.Column="0" 
                   RenderOptions.BitmapScalingMode="HighQuality" 
                   Height="20" Width="20" VerticalAlignment="Center" 
                   Source="/Icon/IconCL(Common).png"/>

            <TextBlock x:Name="ModPackName" Grid.Column="1" 
                       Text="Mod Name Example" 
                       VerticalAlignment="Center" Margin="10,0" 
                       FontSize="12" FontFamily="Inter" 
                       Foreground="{DynamicResource MainForegroundBrush}"
                       TextTrimming="CharacterEllipsis"/>

            <Path x:Name="AddModInModPack" 
      Grid.Column="2"
      Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"
      Fill="{DynamicResource MainBackgroundBrush}"
      Width="20" Height="20"
      Stretch="Uniform"
      VerticalAlignment="Center"
      Cursor="Hand"
      ToolTip="Додати у збірку"
      ></Path>
        </Grid>
    </Border>
</UserControl>