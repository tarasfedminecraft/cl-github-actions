<Window x:Name="MainWindow"
        x:Class="CL_CLegendary_Launcher_.Windows.LoadScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:gif="clr-namespace:XamlAnimatedGif;assembly=XamlAnimatedGif"
        xmlns:local="clr-namespace:CL_CLegendary_Launcher_.Class"
        Title="LoadScreen"
        Height="315"
        Width="594"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen" Icon="/Icon/IconCL(Winter).ico">

    <ui:ClientAreaBorder CornerRadius="20"
            Background="Black"
            BorderThickness="2">

        <Border.Clip>
            <RectangleGeometry RadiusX="20" RadiusY="20" Rect="0,0,594,315" />
        </Border.Clip>

        <Grid x:Name="SnowGrid">

            <Image x:Name="BG"
                   Opacity="0.6" Source="/Assets/DarkThemBG.png" Stretch="UniformToFill" />

            <Border HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Width="594"
                    Height="10"
                    Margin="0,305,0,0">
                <ProgressBar x:Name="LoadingProgressBar"
                             Maximum="100"
                             Height="20"
                             Foreground="#FF00BEFF"
                             Background="{x:Null}" IsIndeterminate="True" BorderBrush="{x:Null}"/>
            </Border>

            <ui:TextBlock x:Name="LoadingText"
           Text="Завантаження..." 
           Foreground="White"
           FontSize="18"
           FontWeight="Bold"
           HorizontalAlignment="Left"
           VerticalAlignment="Top"
           Margin="10,246,0,0" />

            <ui:TextBlock x:Name="RandomPhraseText"
                       Text=""
                       Foreground="White"
                       FontSize="14"
                       FontStyle="Italic"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="0,270,0,0"
                       Width="570"
                       Height="30" />

            <Label x:Name="VersionLauncherTXT"
                   Content="versionlauncher"
                   HorizontalAlignment="Left"
                   Height="28"
                   Margin="267,270,0,0"
                   VerticalAlignment="Top"
                   Width="325"
                   HorizontalContentAlignment="Right"
                   Foreground="#66FFFFFF"
                   Background="{x:Null}"
                   VerticalContentAlignment="Center" />
        </Grid>
    </ui:ClientAreaBorder>
</Window>