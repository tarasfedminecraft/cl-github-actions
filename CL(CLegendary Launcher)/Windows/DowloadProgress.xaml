<Window x:Name="MainWindow" x:Class="CL_CLegendary_Launcher_.DowloadProgress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CL_CLegendary_Launcher_"
        mc:Ignorable="d"
        Title="DowloadProgress" Height="290" Width="615" Background="{x:Null}" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="/Icon/IconCL(Winter).ico" WindowStyle="None" FontFamily="Inter 18pt 18pt">
    <Grid x:Name="MainGird" Background="{DynamicResource MainBackgroundBrush}">

        <ProgressBar x:Name="ProgressDowloadVersion" HorizontalAlignment="Center" Height="30" Margin="0,180,0,0" VerticalAlignment="Top" Width="483" Background="{DynamicResource MainBackgroundBrushServer}" Foreground="{DynamicResource MainBackgroundProgressBar}"/>
        <ProgressBar x:Name="ProgressDowloadFile" HorizontalAlignment="Center" Height="30" Margin="0,89,0,0" VerticalAlignment="Top" Width="483" Background="{DynamicResource MainBackgroundBrushServer}" Foreground="{DynamicResource MainBackgroundProgressBar}"/>
        <Label x:Name="ProgressFileDowloadTXT" Content="0%" HorizontalAlignment="Center" Height="30" Margin="0,89,0,0" VerticalAlignment="Top" Width="483" Foreground="{DynamicResource MainForegroundBrush}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="ProgressDowloadTXT" Content="0%" HorizontalAlignment="Center" Height="30" Margin="0,180,0,0" VerticalAlignment="Top" Width="483" Foreground="{DynamicResource MainForegroundBrush}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="VersionTXT" Content="" HorizontalAlignment="Center" Height="30" Margin="0,139,0,0" VerticalAlignment="Top" Width="483" Foreground="{DynamicResource MainForegroundBrush}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="FileTXT" Content="" HorizontalAlignment="Center" Height="30" Margin="0,20,0,0" VerticalAlignment="Top" Width="483" Foreground="{DynamicResource MainForegroundBrush}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="FileTXTName" Content="" HorizontalAlignment="Center" Height="30" Margin="0,55,0,0" VerticalAlignment="Top" Width="483" Foreground="{DynamicResource MainForegroundBrush}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Border x:Name="StopDownload" BorderThickness="1" HorizontalAlignment="Center" Height="29" Margin="0,215,0,0" VerticalAlignment="Top" Width="483" Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="8,8,8,8" RenderTransformOrigin="0.573,0.458" PreviewMouseDown="StopDownload_PreviewMouseDown">
            <Label x:Name="DowloadTXT" Content="Скасувати Завантаження" Foreground="{DynamicResource MainForegroundBrush}" Background="{x:Null}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,-1,0,-1" Cursor="Hand" ToolTip="Натисніть щоб скасувати завантаження" MouseDown="StopDownload_PreviewMouseDown" FontFamily="Inter 18pt 18pt"/>
        </Border>
        <Border x:Name="BorderTool" BorderThickness="1" HorizontalAlignment="Center" Height="18" VerticalAlignment="Top" Width="623" Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="4,4,4,4" MouseDown="BorderTool_MouseDown" Margin="0,-2,0,0">
            <TextBlock x:Name="NameWin" TextWrapping="Wrap" Text="Вікно завантаження" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource MainForegroundBrush}" FontSize="9" FontFamily="Inter 18pt 18pt"/>
        </Border>
        <Border x:Name="BordrExitTXT"
            BorderThickness="1"
            Margin="0,1,5,0"
            Background="#FFC50808"
            Width="16"
            Height="14"
            CornerRadius="10,10,10,10"
            HorizontalAlignment="Right"
            VerticalAlignment="Top" Visibility="Hidden">
            <Border.RenderTransform>
                <TransformGroup>
                    <!-- Приведені трансформи залишені як приклад.
                 Встанови властивості (Angle, X, Y тощо) за потреби -->
                    <SkewTransform AngleX="0" AngleY="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform X="0" Y="0"/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <TextBlock Text="X"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontWeight="Bold"
            Foreground="{DynamicResource MainForegroundBrush}"
            Cursor="Hand"
            MouseDown="ExitLauncher_MouseDown"
            MouseEnter="ExitLauncher_MouseEnter"
            MouseLeave="ExitLauncher_MouseLeave" Margin="598,-1,0,0" Height="15" Width="8"/>

    </Grid>
</Window>
