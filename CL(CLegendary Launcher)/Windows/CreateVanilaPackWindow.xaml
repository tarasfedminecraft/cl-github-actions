<Window x:Class="CL_CLegendary_Launcher_.Windows.CreateVanilaPackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CL_CLegendary_Launcher_.Windows"
        mc:Ignorable="d"
        Title="CreateVanilaPackWindow" Height="368" Width="569" 
        FontFamily="Inter 18pt 18pt" 
        Foreground="{DynamicResource MainForegroundBrush}" 
        Background="{x:Null}" 
        WindowStyle="None" ResizeMode="NoResize" 
        Icon="/Icon/IconCL(Winter).ico">

    <Grid Background="{DynamicResource MainBackgroundBrush}" Margin="0,0,0,-6">

        <Border x:Name="BorderTool" BorderThickness="1" HorizontalAlignment="Left" Height="18" VerticalAlignment="Top" Width="577" Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="4,4,4,4" MouseDown="BorderTool_MouseDown" Margin="-4,-1,0,0">
            <TextBlock TextWrapping="Wrap" Text="Створення збірки - Ванільної" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource MainForegroundBrush}" FontSize="9"/>
        </Border>

        <Border x:Name="BordrExitTXT"
                BorderThickness="1"
                Margin="0,1,2,0"
                Background="#FFC50808"
                Width="14" Height="14"
                CornerRadius="10"
                HorizontalAlignment="Right"
                VerticalAlignment="Top" 
                Visibility="Hidden">
        </Border>

        <TextBlock Text="X"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               FontWeight="Bold"
               Foreground="{DynamicResource MainForegroundBrush}"
               Cursor="Hand"
               MouseDown="ExitLauncher_MouseDown"
               MouseEnter="ExitLauncher_MouseEnter"
               MouseLeave="ExitLauncher_MouseLeave" Margin="556,1,0,0" Height="15"/>
        <Border x:Name="NamePackBorder" BorderThickness="1" HorizontalAlignment="Center" Height="25" Margin="0,18,0,0" VerticalAlignment="Top" Width="561" Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="8,8,8,8" RenderTransformOrigin="0.5,0">
            <ui:TextBox x:Name="NameModPackTXT" 
                         PlaceholderText="Введіть назву збірки..." 
                         Background="{x:Null}" 
                         BorderThickness="0"
                         Foreground="{DynamicResource MainForegroundBrush}" 
                         CaretBrush="White"
                         FontSize="10"
                         VerticalAlignment="Center" Margin="5,0,5,0" Height="22" BorderBrush="{x:Null}"/>
        </Border>

        <Border x:Name="ModsTxtBorder" BorderThickness="1" HorizontalAlignment="Left" Height="29" VerticalAlignment="Top" Width="306" Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="8" Margin="3,44,0,0">
            <Label Content="Ресурс-паки" Foreground="{DynamicResource MainForegroundBrush}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        </Border>

        <Border x:Name="SearchModPack" BorderThickness="1" CornerRadius="8" Margin="314,44,75,301" Background="{DynamicResource MainBackgroundBrushServer}">
            <ui:TextBox x:Name="SearchSystemModsTXT" PlaceholderText="Пошук..." TextWrapping="Wrap" Margin="-1,0,-1,-1" Background="{x:Null}" Foreground="{DynamicResource MainForegroundBrush}" BorderBrush="{x:Null}" CaretBrush="White" VerticalContentAlignment="Center" FontSize="10" ToolTip="Тут пишете назви модів" MouseDown="SearchSystemModsTXT_MouseDown" PreviewMouseDown="SearchSystemModsTXT_MouseDown" TextChanged="SearchSystemModsTXT_TextChanged"/>
        </Border>

        <Border x:Name="SelectSiteModPacks" BorderThickness="1" HorizontalAlignment="Left" Height="30" Margin="499,44,0,0" VerticalAlignment="Top" Width="64" CornerRadius="8" Background="{DynamicResource MainBackgroundBrushServer}">
            <Border x:Name="SelectSiteModPacksNow" BorderThickness="1" Background="{DynamicResource MainBackgroundBrush}" CornerRadius="6" Margin="3,2,35,4"/>
        </Border>

        <Border x:Name="VersionVanilBorder" 
                BorderThickness="1" HorizontalAlignment="Left" Height="84" Margin="4,73,0,0" VerticalAlignment="Top" Width="70" 
                CornerRadius="8" Background="{DynamicResource MainBackgroundBrushServer}">
            <ui:ListView x:Name="VersionVanil" 
                         HorizontalAlignment="Center" Height="84" VerticalAlignment="Top" Width="70" 
                         BorderBrush="{x:Null}" Background="{x:Null}" 
                         ScrollViewer.HorizontalScrollBarVisibility="Hidden" Cursor="Hand" 
                         SelectionChanged="VersionVanil_SelectionChanged">
                <ui:ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="Foreground" Value="{DynamicResource MainForegroundBrush}"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </ui:ListView.ItemContainerStyle>
            </ui:ListView>
        </Border>

        <Border x:Name="CreateModPacksButton" BorderThickness="1" HorizontalAlignment="Center" Height="35" Margin="0,339,0,0" VerticalAlignment="Top" Width="570" Background="{DynamicResource MainBackgroundBrushServer}">
            <Label x:Name="CreateModPacksButtonTXT" Content="Створити" HorizontalAlignment="Center" Height="34" VerticalAlignment="Center" Width="538" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Inter 18pt 18pt" FontSize="16" Cursor="Hand" Foreground="{DynamicResource MainForegroundBrush}" MouseDown="CreateModPacksButtonTXT_MouseDown"/>
        </Border>
        <ui:ListView x:Name="ModsDowloadList" 
                             HorizontalAlignment="Left" Height="256" VerticalAlignment="Top" Width="288" 
                             FontSize="10" BorderBrush="{x:Null}" 
                             Foreground="{DynamicResource MainForegroundBrush}" 
                             Background="{x:Null}" 
                             ScrollViewer.HorizontalScrollBarVisibility="Hidden" 
                             Cursor="Hand" Margin="79,78,0,0"/>
        <Image x:Name="ModrinthSite" RenderOptions.BitmapScalingMode="HighQuality" HorizontalAlignment="Left" Height="16" Margin="507,50,0,0" VerticalAlignment="Top" Width="16" Source="/Assets/1200-818013157 1.png" Cursor="Hand" MouseDown="ModrinthSite_MouseDown"/>
        <Image x:Name="CurseForgeSite" RenderOptions.BitmapScalingMode="HighQuality" HorizontalAlignment="Left" Height="16" Margin="537,50,0,0" VerticalAlignment="Top" Width="16" Source="/Assets/curseforge-logo-3499974474.png" Cursor="Hand" MouseDown="CurseForgeSite_MouseDown"/>
        <Border BorderThickness="1" CornerRadius="8" Background="{DynamicResource MainBackgroundBrushServer}" Margin="372,77,6,48">
            <ui:ListView x:Name="AddModsInModPackList" 
            HorizontalAlignment="Center" Height="256" VerticalAlignment="Center" Width="171" 
            FontSize="10" BorderBrush="{x:Null}" 
            Foreground="{DynamicResource MainForegroundBrush}" 
            Background="{x:Null}" 
            ScrollViewer.HorizontalScrollBarVisibility="Hidden" 
            Cursor="Hand"/>
        </Border>
        <Grid x:Name="GirdModsDowload" HorizontalAlignment="Left" Height="374" Margin="0,16,0,0" VerticalAlignment="Top" Width="573" Background="{DynamicResource MainBackgroundBrush}" Visibility="Hidden"/>
        <Grid x:Name="MenuInstaller" HorizontalAlignment="Left" Height="206" VerticalAlignment="Top" Width="254" Margin="163,77,0,0" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border BorderThickness="1" Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="14"/>

            <Border x:Name="DowloadMod" BorderThickness="1" HorizontalAlignment="Center" Height="29" Margin="0,169,0,0" VerticalAlignment="Top" Width="234" Background="{DynamicResource MainBackgroundButton}" CornerRadius="8" RenderTransformOrigin="0.573,0.458" Cursor="Hand" MouseDown="DowloadTXT_MouseDown">
                <TextBlock x:Name="DowloadTXT" Text="Додати" Foreground="{DynamicResource MainForegroundBrush}" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Inter" FontWeight="Bold" FontSize="18"/>
            </Border>

            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="83" Margin="0,76,0,0" VerticalAlignment="Top" Width="235" CornerRadius="8" Background="{DynamicResource MainBackgroundBrush}">
                <ui:ListView x:Name="VersionMods" d:ItemsSource="{d:SampleData ItemCount=5}" Background="{x:Null}" BorderBrush="{x:Null}" ScrollViewer.HorizontalScrollBarVisibility="Hidden" FontSize="12">
                    <ui:ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Setter Property="Foreground" Value="{DynamicResource MainForegroundBrush}"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </ui:ListView.ItemContainerStyle>
                </ui:ListView>
            </Border>

            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="30" Margin="0,41,0,0" VerticalAlignment="Top" Width="235" CornerRadius="8" Background="{DynamicResource MainBackgroundBrush}">
                <TextBlock x:Name="GameVersionMinecraft_Копировать" Text="Мод" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource MainForegroundBrush}" FontSize="14" FontFamily="Inter"/>
            </Border>

            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="30" Margin="0,6,0,0" VerticalAlignment="Top" Width="234" CornerRadius="8" Background="{DynamicResource MainBackgroundBrush}">
                <TextBlock x:Name="TitleModsDowload" Text="Вибір версії моду" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource MainForegroundBrush}" FontSize="14" FontFamily="Inter"/>
            </Border>
        </Grid>

    </Grid>
</Window>