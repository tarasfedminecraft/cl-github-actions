<UserControl x:Name="Control" x:Class="CL_CLegendary_Launcher_.Windows.ItemNews"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CL_CLegendary_Launcher_.Windows"
             mc:Ignorable="d" Height="120" Width="245" Cursor="Hand">

    <UserControl.Effect>
        <DropShadowEffect ShadowDepth="1" BlurRadius="5" Opacity="0.2" Direction="270"/>
    </UserControl.Effect>

    <Border x:Name="MainBorder" 
            Background="{DynamicResource MainBackgroundBrushServer}" 
            CornerRadius="12" 
            BorderThickness="1"
            ClipToBounds="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <Image x:Name="ImageNews" Grid.Row="0"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   RenderOptions.BitmapScalingMode="LowQuality" 
                   Stretch="UniformToFill"/>

            <Border Grid.Row="0" VerticalAlignment="Bottom" Height="20" Background="{DynamicResource MainBackgroundBrushServer}" Opacity="0.1" Margin="0,0,0,-10">
                <Border.Effect>
                    <BlurEffect Radius="10"/>
                </Border.Effect>
            </Border>

            <Border Grid.Row="1" Background="Transparent" Padding="10,0">
                <TextBlock x:Name="TitleUpdate" 
                           Text="Заголовок новини..." 
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="{DynamicResource MainBorderBrush}" 
                           FontFamily="Inter" FontSize="12" FontWeight="SemiBold"
                           TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"/>
            </Border>
        </Grid>
    </Border>
</UserControl>