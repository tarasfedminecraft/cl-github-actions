<ui:FluentWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:CL_CLegendary_Launcher_.Class"
        xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf" 
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf" 
        xmlns:Windows="clr-namespace:CL_CLegendary_Launcher_.Windows" 
        x:Name="CL_CLegendary_Launcher_" 
        x:Class="CL_CLegendary_Launcher_.CL_Main_"
        mc:Ignorable="d"
        Title="CL(CLegendary Launcher)" 
        FontFamily="Inter 18pt 18pt" FontSize="14" Foreground="#01000000" 
        WindowStartupLocation="CenterScreen" Icon="/Icon/IconCL(Common).png" 
        HorizontalContentAlignment="Stretch" HorizontalAlignment="Left" VerticalAlignment="Top" 
        Width="960" Height="542" 
        Loaded="CL_CLegendary_Launcher__Loaded_1" Background="{x:Null}" AllowDrop="True" 
        Closed="CL_CLegendary_Launcher__Closed" WindowStyle="None"
        ExtendsContentIntoTitleBar="True" ResizeMode="CanResize"
        WindowBackdropType="Acrylic" Closing="CL_CLegendary_Launcher__Closing">
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{DynamicResource MainBackgroundButton}" />
            <Setter Property="Foreground" Value="{DynamicResource MainForegroundBrush}" />
            <Setter Property="FontFamily" Value="Arial" />
        </Style>
        <Style TargetType="{x:Type Label}">
            <Setter Property="Foreground" Value="{DynamicResource MainForegroundBrush}" />
            <Setter Property="FontFamily" Value="Arial" />
        </Style>
        <Style TargetType="{x:Type Border}">
            <Setter Property="Background" Value="{DynamicResource MainBackgroundBrush}" />
        </Style>
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0.0" To="1.0" Duration="0:0:1"/>
        </Storyboard>
        <Storyboard x:Key="FadeOut">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="1.0" To="0.0" Duration="0:0:1"/>
        </Storyboard>
        <Storyboard x:Key="SmoothScroll">
            <DoubleAnimation Storyboard.TargetProperty="(ScrollViewer.ContentVerticalOffset)"
                             Duration="0:0:0.3"
                             To="{Binding VerticalOffset, RelativeSource={RelativeSource AncestorType={x:Type ScrollViewer}, Mode=FindAncestor}}" />
        </Storyboard>
        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <BulletDecorator Background="Transparent">
                            <BulletDecorator.Bullet>
                                <Border Width="16" Height="16" CornerRadius="3" BorderThickness="2" BorderBrush="{x:Null}" Background="{TemplateBinding Background}">
                                    <Grid>
                                        <Rectangle x:Name="CheckMark" Visibility="Collapsed" Width="5" Height="5" Fill="White" />
                                    </Grid>
                                </Border>
                            </BulletDecorator.Bullet>
                            <ContentPresenter VerticalAlignment="Center" Margin="5,0,0,0" RecognizesAccessKey="True"/>
                        </BulletDecorator>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <QuadraticEase x:Key="QuadraticEaseOut" EasingMode="EaseOut"/>
        <Style x:Key="SegmentedRadioStyle" TargetType="RadioButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{DynamicResource MainForegroundBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#30FFFFFF"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TagPillStyle" TargetType="Border">
            <Setter Property="Background" Value="#15FFFFFF"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Height" Value="32"/>
        </Style>

    </Window.Resources>

    <Grid x:Name="GirdMain" HorizontalAlignment="Center" VerticalAlignment="Center" AllowDrop="True">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="MainBackgroundContainer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Image x:Name="Bg" 
           RenderOptions.BitmapScalingMode="Fant"  
           HorizontalAlignment="Center" 
           VerticalAlignment="Center" 
           Stretch="UniformToFill" 
           IsHitTestVisible="False"
           Source="/Assets/DarkThemBG.webp"/>
        </Grid>
        <Grid x:Name="PanelListStats" 
      HorizontalAlignment="Right" 
      VerticalAlignment="Top"
      Width="206" 
      Height="134" 
      Margin="0,80,20,0" Visibility="Collapsed">

            <Border x:Name="OnllinePanel1" 
            BorderThickness="1" 
            CornerRadius="16" 
            Background="Transparent" 
            BorderBrush="#33FFFFFF" 
            ClipToBounds="True">
                <Grid>
                    <Border CornerRadius="12" Visibility="{DynamicResource GlassVisibility}">
                        <Border.Background>
                            <VisualBrush Visual="{Binding ElementName=MainBackgroundContainer}" Stretch="None"/>
                        </Border.Background>
                        <Border.Effect>
                            <BlurEffect Radius="{DynamicResource GlassBlurRadius}"/>
                        </Border.Effect>
                    </Border>
                    <Border CornerRadius="12" Background="{DynamicResource GlassTintBrush}"/>

                    <Border CornerRadius="16" 
                    Background="{DynamicResource GlassTintBrush}" 
                    Opacity="0.6"/>
                </Grid>
            </Border>

            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                    <TextBlock x:Name="TextStatsGameMinecraft" 
                   Text="Завантаження..." 
                   HorizontalAlignment="Stretch" 
                   VerticalAlignment="Top" 
                   FontFamily="Inter 18pt 18pt" 
                   FontSize="12"
                   Foreground="{DynamicResource MainForegroundBrush}"
                   Background="Transparent"/>
                </ScrollViewer>
            </Grid>
        </Grid>
        <Grid x:Name="PanelManegerAccount" 
      HorizontalAlignment="Right" 
      VerticalAlignment="Top"
      Width="206" 
      Height="160" 
      Margin="0,80,20,0" Visibility="Collapsed">

            <Border x:Name="OnllinePanel" 
            BorderThickness="1" 
            CornerRadius="16" 
            Background="Transparent" 
            BorderBrush="#33FFFFFF"
            ClipToBounds="True">
                <Grid>
                    <Border CornerRadius="12" Visibility="{DynamicResource GlassVisibility}">
                        <Border.Background>
                            <VisualBrush Visual="{Binding ElementName=MainBackgroundContainer}" Stretch="None"/>
                        </Border.Background>
                        <Border.Effect>
                            <BlurEffect Radius="{DynamicResource GlassBlurRadius}"/>
                        </Border.Effect>
                    </Border>
                    <Border CornerRadius="12" Background="{DynamicResource GlassTintBrush}"/>

                    <Border CornerRadius="16" 
                    Background="{DynamicResource GlassTintBrush}" 
                    Opacity="0.6"/>
                </Grid>
            </Border>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ui:ListView x:Name="ListAccount" 
                     Grid.Row="0"
                     HorizontalAlignment="Stretch" 
                     VerticalAlignment="Stretch"
                     Margin="0,5,0,0"
                     Background="{x:Null}" 
                     BorderBrush="{x:Null}" 
                     Foreground="{DynamicResource MainForegroundBrush}" 
                     ScrollViewer.VerticalScrollBarVisibility="Visible" 
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                            <Setter Property="Padding" Value="5" />
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#20FFFFFF" />
                                    <Setter Property="BorderBrush" Value="Transparent" />
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#40FFFFFF" />
                                    <Setter Property="BorderBrush" Value="Transparent" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ui:ListView>

                <TextBlock x:Name="AddProfile" 
               Grid.Row="1"
               Text="Додати профіль +" 
               HorizontalAlignment="Center" 
               FontFamily="Inter 18pt 18pt" FontSize="12"
               Cursor="Hand" MouseDown="AddProfile_MouseDown"
               Foreground="{DynamicResource MainForegroundBrush}"
               Background="Transparent"
               Margin="0,5,0,0"/>

                <TextBlock x:Name="StatsTextOpen" 
               Grid.Row="2"
               Text="Статистика" 
               HorizontalAlignment="Center" 
               FontFamily="Inter 18pt 18pt" FontSize="12"
               Cursor="Hand" MouseDown="StatsTextOpen_MouseDown"
               Foreground="{DynamicResource MainForegroundBrush}"
               Background="Transparent"
               Margin="0,0,0,5"/>
            </Grid>
        </Grid>
        <Grid x:Name="GirdPanelFooter" VerticalAlignment="Bottom" Height="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border x:Name="PanelFooter" 
                    Grid.ColumnSpan="3"
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Margin="-11,0,-11,-10"
                    Height="180"
                    VerticalAlignment="Bottom"
                    Background="Transparent" 
                    BorderBrush="#33FFFFFF" 
                    ClipToBounds="True">
                <Grid>
                    <Border CornerRadius="12" Visibility="{DynamicResource GlassVisibility}">
                        <Border.Background>
                            <VisualBrush Visual="{Binding ElementName=MainBackgroundContainer}" 
                                         Stretch="None"
                                         AlignmentX="Center"
                                         AlignmentY="Bottom"/>
                        </Border.Background>
                        <Border.Effect>
                            <BlurEffect Radius="{DynamicResource GlassBlurRadius}"/>
                        </Border.Effect>

                    </Border>

                    <Border CornerRadius="12" Background="{DynamicResource GlassTintBrush}"/>
                </Grid>
            </Border>
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,135">
                <ui:SymbolIcon Symbol="News24" FontSize="18" Foreground="{DynamicResource MainForegroundBrush}" Margin="0,0,8,0"/>
                <TextBlock x:Name="DevLogMinecraft" 
                           Text="Що нового? (Changelog)" 
                           FontFamily="Inter" FontSize="14" FontWeight="SemiBold"
                           Foreground="{DynamicResource MainForegroundBrush}"/>
            </StackPanel>

            <ui:ListView x:Name="VersionMinecraftChangeLog"  
                 Grid.Column="0"
                 HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                 Margin="10,0,0,0" Height="135" Width="310"
                 Background="{DynamicResource MainBackgroundBrushServer}" 
                 Foreground="{DynamicResource MainForegroundBrush}" 
                 BorderBrush="{x:Null}"
                 Cursor="Hand" 
                 ScrollViewer.HorizontalScrollBarVisibility="Hidden" 
                 SelectionChanged="VersionMinecraftChangeLog_SelectionChanged" 
                 PreviewMouseDown="VersionMinecraftChangeLog_PreviewMouseDown"
                 ScrollViewer.CanContentScroll="True"
                 VirtualizingPanel.IsVirtualizing="True"       
                 VirtualizingPanel.VirtualizationMode="Recycling"
                 ToolTip="Натисніть, щоб прочитати список змін цієї версії">

                <ui:ListView.Style>
                    <Style TargetType="{x:Type ui:ListView}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ui:ListView}">
                                    <Border CornerRadius="12" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                        <ScrollViewer Margin="{TemplateBinding Padding}" CanContentScroll="{TemplateBinding ScrollViewer.CanContentScroll}">
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ui:ListView.Style>

                <ui:ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="2,4,2,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" CornerRadius="4" Width="24" Height="24" Margin="0,0,10,0" ClipToBounds="True">
                                <Image Source="{Binding IconPath}" RenderOptions.BitmapScalingMode="LowQuality"/>
                            </Border>

                            <TextBlock Grid.Column="1" VerticalAlignment="Center" 
                                       FontFamily="Inter" FontSize="14" 
                                       Foreground="{DynamicResource MainForegroundBrush}">
                                <Run Text="Зміни в "/>
                                <Run Text="{Binding VersionId}" FontWeight="Medium"/>
                            </TextBlock>

                            <ui:SymbolIcon Grid.Column="2" Symbol="Open24" FontSize="14" Opacity="0.5" 
                                           Foreground="{DynamicResource MainForegroundBrush}" 
                                           ToolTip="Читати на Вікі"/>
                        </Grid>
                    </DataTemplate>
                </ui:ListView.ItemTemplate>
            </ui:ListView>

            <Grid Grid.Column="1" VerticalAlignment="Top" Margin="0,7,0,0" Height="207">

                <Grid Grid.Column="1" VerticalAlignment="Top" Margin="10,7,10,0" Width="250" Height="207">

                    <Border HorizontalAlignment="Center" VerticalAlignment="Top" 
                    Width="250" Height="140" Margin="0,57,0,0"
                    Background="{DynamicResource MainBackgroundBrushServer}" 
                    CornerRadius="16" Padding="0,5">

                        <StackPanel VerticalAlignment="Center">

                            <Grid Height="40" Margin="5,2" Cursor="Hand" MouseDown="SettingPanel_MouseDown" Background="Transparent">
                                <Border x:Name="SettingPanel" CornerRadius="12" Background="{DynamicResource MainBackgroundButton}" Opacity="0.5"/>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                                    <Path Width="20" Height="20" Stretch="Uniform" Fill="{DynamicResource MainForegroundBrush}"
                                  Data="M19.14,12.94c0.04-0.3,0.06-0.61,0.06-0.94c0-0.32-0.02-0.64-0.07-0.94l2.03-1.58c0.18-0.14,0.23-0.41,0.12-0.61 l-1.92-3.32c-0.12-0.22-0.37-0.29-0.59-0.22l-2.39,0.96c-0.5-0.38-1.03-0.7-1.62-0.94L14.4,2.81c-0.04-0.24-0.24-0.41-0.48-0.41 h-3.84c-0.24,0-0.43,0.17-0.47,0.41L9.25,5.35C8.66,5.59,8.12,5.92,7.63,6.29L5.24,5.33c-0.22-0.08-0.47,0-0.59,0.22L2.74,8.87 C2.62,9.08,2.66,9.34,2.86,9.48l2.03,1.58C4.84,11.36,4.8,11.69,4.8,12s0.02,0.64,0.07,0.94l-2.03,1.58 c-0.18,0.14-0.23,0.41-0.12,0.61l1.92,3.32c0.12,0.22,0.37,0.29,0.59,0.22l2.39-0.96c0.5,0.38,1.03,0.7,1.62,0.94l0.36,2.54 c0.05,0.24,0.24,0.41,0.48,0.41h3.84c0.24,0,0.44-0.17,0.47-0.41l0.36-2.54c0.59-0.24,1.13-0.56,1.62-0.94l2.39,0.96 c0.22,0.08,0.47,0,0.59-0.22l1.92-3.32c0.12-0.22,0.07-0.47-0.12-0.61L19.14,12.94z M12,15.6c-1.98,0-3.6-1.62-3.6-3.6 s1.62-3.6,3.6-3.6s3.6,1.62,3.6,3.6S13.98,15.6,12,15.6z"/>
                                    <TextBlock Text="Налаштування" FontFamily="Inter" FontSize="16" Foreground="{DynamicResource MainForegroundBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                </StackPanel>
                            </Grid>

                            <Grid Height="40" Margin="5,2" Cursor="Hand" MouseDown="FolderPanel_MouseDown" Background="Transparent">
                                <Grid.ContextMenu>
                                    <ContextMenu x:Name="FilesContextMenu" Placement="Top">
                                        <MenuItem Header="Відкрити папку лаунчера" Click="OpenFolder_Click">
                                            <MenuItem.Icon>
                                                <ui:SymbolIcon Symbol="Folder48"></ui:SymbolIcon>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <Separator/>
                                        <MenuItem Header="Менеджер світів (Backups)" Click="OpenGlobalBackups_Click">
                                            <MenuItem.Icon>
                                                <ui:SymbolIcon Symbol="Save28"></ui:SymbolIcon>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </ContextMenu>
                                </Grid.ContextMenu>

                                <Border x:Name="FolderPanel" CornerRadius="12" Background="{DynamicResource MainBackgroundButton}" Opacity="0.5"/>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                                    <Path Width="20" Height="20" Stretch="Uniform" Fill="{DynamicResource MainForegroundBrush}"
                                  Data="M10,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6H12L10,4Z"/>
                                    <TextBlock Text="Файли та Бекапи" FontFamily="Inter" FontSize="16" Foreground="{DynamicResource MainForegroundBrush}" VerticalAlignment="Center" Margin="12,0,0,0" Width="164"/>
                                    <TextBlock Text="▲" Margin="8,2,0,0" FontSize="10" VerticalAlignment="Center" Opacity="0.6" Foreground="{DynamicResource MainForegroundBrush}" Width="12"/>
                                </StackPanel>
                            </Grid>

                            <Grid x:Name="InfoPanel" Height="40" Margin="5,2" Cursor="Hand" MouseDown="InfoPanel_MouseDown" Background="Transparent">

                                <Grid.ContextMenu>
                                    <ContextMenu x:Name="InfoContextMenu" Placement="Top">

                                        <MenuItem Header="Повідомити про баг" Click="BugReport_Click">
                                            <MenuItem.Icon>
                                                <ui:SymbolIcon Symbol="Bug24"/>
                                            </MenuItem.Icon>
                                        </MenuItem>

                                        <MenuItem Header="Новини запускача" Click="NewsUpdateLauncher_Click">
                                            <MenuItem.Icon>
                                                <ui:SymbolIcon Symbol="News24"/>
                                            </MenuItem.Icon>
                                        </MenuItem>

                                        <MenuItem Header="Документація (Wiki)" Click="TutorialYoutube_Click">
                                            <MenuItem.Icon>
                                                <ui:SymbolIcon Symbol="Book24"/>
                                            </MenuItem.Icon>
                                        </MenuItem>

                                        <Separator/>

                                        <MenuItem Header="GitHub (Код)" Click="GitHub_Click">
                                            <MenuItem.Icon>
                                                <ui:SymbolIcon Symbol="Code24"/>
                                            </MenuItem.Icon>
                                        </MenuItem>

                                    </ContextMenu>
                                </Grid.ContextMenu>
                                <Border x:Name="InfoLauncherPanel" CornerRadius="12" Background="{DynamicResource MainBackgroundButton}" Opacity="0.5"/>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                                    <Path Width="20" Height="20" Stretch="Uniform" Fill="{DynamicResource MainForegroundBrush}"
              Data="M11,9H13V7H11M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M11,17H13V11H11V17Z"/>

                                    <TextBlock Text="Інформація" FontFamily="Inter" FontSize="16" Foreground="{DynamicResource MainForegroundBrush}" VerticalAlignment="Center" Margin="12,0,0,0" Width="163"/>
                                    <TextBlock Text="▲" Margin="8,2,0,0" FontSize="10" VerticalAlignment="Center" Opacity="0.6" Foreground="{DynamicResource MainForegroundBrush}" Width="17"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>

                <Border x:Name="BorderButton" CornerRadius="12" 
                VerticalAlignment="Top" Margin="0,20,0,0"
                Height="36" Width="250" HorizontalAlignment="Center">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF17DA1F"/>
                            <GradientStop Color="#FF18A61E" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Image x:Name="BackMainWindow"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Height="50" Width="50"
                   MouseDown="BackMainWindow_MouseDown"
                   Cursor="Hand" Stretch="Uniform"
                   ToolTip="ПОВЕРНУТИСЬ ДО ГОЛОВНОГО ВІКНА">
                        <Image.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Black"/>
                        </Image.Effect>
                    </Image>
                </Border>

                <TextBlock x:Name="PlayTXT" 
                   VerticalAlignment="Top" HorizontalAlignment="Left" 
                   Margin="9,23,0,0" Width="176" Height="29" 
                   FontFamily="Inter 18pt 18pt" FontSize="10" Foreground="White" Background="{x:Null}"
                   PreviewMouseDown="PlayTXT_MouseDown" Text="ОБЕРІТЬ ВЕРСІЮ" Padding="53,10,0,0"/>

                <Image x:Name="IconSelectVersion" Source="/Assets/VanilaVersion.png" 
               HorizontalAlignment="Right" VerticalAlignment="Top" 
               Margin="0,22,32,0" Height="31" Width="30" 
               RenderOptions.BitmapScalingMode="LowQuality" Cursor="Arrow" Stretch="Fill" ToolTip="ГРАТИ"/>

                <Border x:Name="Line" BorderThickness="1" Background="#FF16951B" 
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="0,20,62,0" Width="3" Height="38">
                    <Image x:Name="BackMainWindow1" HorizontalAlignment="Left" Height="65" VerticalAlignment="Center" Width="62" MouseDown="BackMainWindow_MouseDown" Cursor="Hand" Stretch="Fill" ToolTip="ПОВЕРНУТИСЬ ДО ГОЛОВНОГО ВІКНА" Margin="157,0,0,0" Visibility="Hidden">
                        <Image.Effect>
                            <DropShadowEffect/>
                        </Image.Effect>
                    </Image>
                </Border>

                <Path x:Name="CheckMarkVersionSelect" 
              Data="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z"
              Fill="{DynamicResource MainForegroundBrush}"
              Stretch="Uniform"
              HorizontalAlignment="Right" VerticalAlignment="Top"
              Margin="0,32,14,0" Height="31" Width="18"
              Cursor="Hand"
              ToolTip="НАТИСНІТЬ ЩОБ ДІЗНАТИСЯ ЯКІ Є ВЕРСІЇ НА ВИБІР" 
              MouseDown="CheckMarkVersionSelect_MouseDown"
              RenderTransformOrigin="0.5,0.5" >
                    <Path.RenderTransform>
                        <RotateTransform x:Name="IconVersionRotateTransform" Angle="180"/>
                    </Path.RenderTransform>
                </Path>
            </Grid>

            <StackPanel Grid.Column="2" Orientation="Horizontal"
            HorizontalAlignment="Right" VerticalAlignment="Top" 
            Margin="0,50,17,0" Height="17">
                <ui:SymbolIcon Symbol="PeopleCommunity24" FontSize="12" Foreground="{DynamicResource MainForegroundBrush}" Margin="0,0,5,0"/>
                <TextBlock Text="Партнери" 
               FontFamily="Inter 18pt 18pt" FontSize="10" 
               Foreground="{DynamicResource MainForegroundBrush}"/>
            </StackPanel>

            <ui:HyperlinkButton x:Name="PartherHelper" Grid.Column="2"
                        NavigateUri="https://cl-launcher.app/tutorial.html#" 
                        Content="Як потрапити?" 
                        HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Margin="0,48,255,0" 
                        Background="{x:Null}" Foreground="{DynamicResource MainForegroundBrush}" 
                        FontFamily="Inter 18pt 18pt" FontSize="10" Cursor="Hand" BorderBrush="{x:Null}"/>

            <Border Grid.Column="2" 
            BorderThickness="1" 
            Background="{DynamicResource MainBackgroundBrushServer}" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Right"
            Width="315"
            Margin="0,65,10,0" 
            Height="67" 
            CornerRadius="14"
            ClipToBounds="True">

                <ui:ListView x:Name="PartnerServer"
                     HorizontalAlignment="Center" VerticalAlignment="Center" 
                     Background="{x:Null}" Foreground="{x:Null}" 
                     BorderBrush="{x:Null}" BorderThickness="0"
                     Cursor="Hand" 
                     ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     SelectedIndex="0" 
                     HorizontalContentAlignment="Center" 
                     VerticalContentAlignment="Center">

                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <ListBox.ItemContainerStyle>
