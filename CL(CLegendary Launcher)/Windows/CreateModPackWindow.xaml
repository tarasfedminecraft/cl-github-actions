<ui:FluentWindow x:Class="CL_CLegendary_Launcher_.Windows.CreateModPackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CL_CLegendary_Launcher_.Windows"
        mc:Ignorable="d"
        Title="CL - Створення модової збірок" Height="600" Width="850" 
        Background="{x:Null}" 
        Foreground="{DynamicResource MainForegroundBrush}" 
        FontFamily="Inter"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" 
        Icon="/Icon/IconCL(Common).png" 
        WindowStyle="None" 
        Closed="Window_Closed"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica" BorderThickness="0">

    <Window.Resources>
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{DynamicResource MainForegroundBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="10,5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#FF00Aaff"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource MainBackgroundBrushServer}"/>
            <Setter Property="Foreground" Value="{DynamicResource MainForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#44FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#22FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10" Background="{DynamicResource MainBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" MouseLeftButtonDown="Header_MouseLeftButtonDown" Margin="-9,-10,-8,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
               Text="Створення збірки - Модової збірки (Forge,Fabric,...)" 
               VerticalAlignment="Center" 
               Margin="10,0,0,0" 
               Foreground="{DynamicResource MainForegroundBrush}" 
               FontSize="12"/>

            <ui:Button Grid.Column="1" 
               Content="✕" 
               Appearance="Transparent"
               Foreground="{DynamicResource MainForegroundBrush}"
               Width="40" Height="30" 
               Padding="0" 
               VerticalAlignment="Top" 
               HorizontalAlignment="Right"
               Click="ExitLauncher_MouseDown" 
               Cursor="Hand"/>
        </Grid>

        <Border Grid.Row="1" Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="8" Padding="15" Margin="0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1.2*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Назва збірки" FontSize="10" Foreground="{DynamicResource MainForegroundBrush}" Margin="0,0,0,5"/>
                    <ui:TextBox x:Name="NameModPackTXT" PlaceholderText="Напишіть назву..." Height="38" Background="{DynamicResource MainBackgroundBrush}" Cursor="IBeam" />
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                    <TextBlock Text="Версія Minecraft" FontSize="10" Foreground="{DynamicResource MainForegroundBrush}" Margin="0,0,0,5"/>
                    <ComboBox x:Name="VersionVanilBox" Height="38" SelectionChanged="VersionVanil_SelectionChanged" Background="{DynamicResource MainBackgroundBrush}" Foreground="{DynamicResource MainForegroundBrush}" ScrollViewer.HorizontalScrollBarVisibility="Hidden" Cursor="Hand"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="0,0,10,0">
                    <TextBlock Text="Тип ядра" FontSize="10" Foreground="{DynamicResource MainForegroundBrush}" Margin="0,0,0,5"/>
                    <ComboBox x:Name="LoaderBox" Height="38" SelectedIndex="0" SelectionChanged="LoaderBox_SelectionChanged" Foreground="{DynamicResource MainForegroundBrush}" Background="{DynamicResource MainBackgroundBrush}" Cursor="Hand">
                        <ComboBoxItem Content="Forge"/>
                        <ComboBoxItem Content="NeoForge"/>
                        <ComboBoxItem Content="Fabric"/>
                        <ComboBoxItem Content="Quilt"/>
                        <ComboBoxItem Content="LiteLoader"/>
                        <ComboBoxItem Content="Optifine"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="3">
                    <TextBlock Text="Версія ядра" FontSize="10" Foreground="{DynamicResource MainForegroundBrush}" Margin="0,0,0,5"/>
                    <ComboBox x:Name="LoaderVersionBox" Height="38" IsEnabled="False" Foreground="{DynamicResource MainForegroundBrush}" Background="{DynamicResource MainBackgroundBrush}" ScrollViewer.HorizontalScrollBarVisibility="Auto" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <Button Content="Моди" Style="{StaticResource TabButtonStyle}" Click="ModsTxt_MouseDown" Foreground="{DynamicResource MainForegroundBrush}" Background="{x:Null}"/>
                <Button Content="Ресурс-паки" Style="{StaticResource TabButtonStyle}" Click="ResourcePackTxt_MouseDown" Foreground="{DynamicResource MainForegroundBrush}" Background="{x:Null}"/>
                <Button Content="Шейдери" Style="{StaticResource TabButtonStyle}" Click="ShaderPackTxt_MouseDown" Foreground="{DynamicResource MainForegroundBrush}" Background="{x:Null}"/>
            </StackPanel>

            <ui:TextBox Grid.Column="2" x:Name="SearchSystemModsTXT" PlaceholderText="Пошук модів..." Margin="10,0" TextChanged="SearchSystemModsTXT_TextChanged" Foreground="{DynamicResource MainForegroundBrush}" Background="{DynamicResource MainBackgroundBrush}"/>

            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                <Image x:Name="ModrinthSite" 
       Source="/Assets/1200-818013157 1.png"
       Width="24" Height="24" 
       Cursor="Hand"
       Opacity="1.0"
       RenderOptions.BitmapScalingMode="HighQuality"
       MouseDown="ModrinthSite_MouseDown"
       MouseEnter="Provider_MouseEnter"
       MouseLeave="Provider_MouseLeave"/>

                <Image x:Name="CurseForgeSite" 
       Source="/Assets/curseforge-logo-3499974474.png"
       Width="24" Height="24" 
       Cursor="Hand" 
       Opacity="0.5"
       RenderOptions.BitmapScalingMode="HighQuality"
       MouseDown="CurseForgeSite_MouseDown"
       MouseEnter="Provider_MouseEnter"
       MouseLeave="Provider_MouseLeave"
       Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Результати пошуку" FontSize="12" Foreground="{DynamicResource MainForegroundBrush}" Margin="0,0,0,5"/>

                <Border Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="8" Margin="0,19,0,50" Grid.RowSpan="2">
                    <Grid>
                        <ListView x:Name="ModsDowloadList" 
                  Background="Transparent" 
                  BorderThickness="0" 
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ScrollViewer.VerticalScrollBarVisibility="Auto" 
                  Foreground="{DynamicResource MainForegroundBrush}">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0,2"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>

                        <StackPanel x:Name="ModsSearchLoader" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Orientation="Vertical" Visibility="Collapsed">

                            <ui:ProgressRing IsIndeterminate="True" 
                             Width="60" Height="60" 
                             Foreground="{DynamicResource MainBackgroundProgressBar}"/>

                            <TextBlock Text="Bit-CL шукає потрібні файли..." 
                       Margin="0,20,0,0"
                       FontSize="16" 
                       FontFamily="Inter"
                       FontWeight="Medium"
                       Foreground="{DynamicResource MainForegroundBrush}"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <StackPanel x:Name="PaginationPanel" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,289,0,0" Width="198" VerticalAlignment="Top" Height="50">

                    <ui:Button x:Name="PrevPageBtn" 
                                       Icon="{ui:SymbolIcon ArrowLeft24}" 
                                       Click="PrevPageBtn_Click" 
                                       Appearance="Secondary" 
                                       IsEnabled="False" 
                                       Margin="0,0,15,0" 
                                       Width="64" Height="40" 
                                       CornerRadius="8" 
                                       Content="" 
                                       Foreground="{DynamicResource MainForegroundBrush}" 
                                       BorderBrush="{x:Null}" 
                                       Background="{DynamicResource MainBackgroundButton}" 
                                       Cursor="Hand"
                                       ToolTip="Попередня сторінка"/>

                    <Border Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="8" Height="40" Padding="15,0">
                        <TextBlock x:Name="PageNumberText" 
                                           Text="1" 
                                           VerticalAlignment="Center" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="{DynamicResource MainForegroundBrush}"/>
                    </Border>

                    <ui:Button x:Name="NextPageBtn" 
                                       Icon="{ui:SymbolIcon ArrowRight24}" 
                                       Click="NextPageBtn_Click" 
                                       Appearance="Secondary" 
                                       Margin="15,0,0,0" 
                                       Width="64" Height="40" 
                                       CornerRadius="8" 
                                       Content="" 
                                       Background="{DynamicResource MainBackgroundButton}" 
                                       BorderBrush="{x:Null}" 
                                       Foreground="{DynamicResource MainForegroundBrush}" 
                                       Cursor="Hand"
                                       ToolTip="Наступна сторінка"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Обрані моди (Ваша збірка)" FontSize="12" Foreground="{DynamicResource MainForegroundBrush}" Margin="0,0,0,5"/>

                <Border Grid.Row="1" Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="8">
                    <ListView x:Name="AddModsInModPackList" 
                              Background="{x:Null}" 
                              BorderThickness="0"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              ScrollViewer.VerticalScrollBarVisibility="Auto" 
                              Foreground="{DynamicResource MainForegroundBrush}">

                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0,2"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Border>
            </Grid>
        </Grid>

        <Grid Grid.Row="4" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ui:Button Grid.Column="0" Style="{StaticResource ActionButtonStyle}" 
            Height="40"
            Icon="{ui:SymbolIcon AddCircle32}"
            Click="CreateModPacksButtonTXT_MouseDown" 
            Background="{DynamicResource MainBackgroundBrushServer}" 
            Foreground="{DynamicResource MainForegroundBrush}" Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="СТВОРИТИ ЗБІРКУ" FontWeight="Bold" Foreground="{DynamicResource MainForegroundBrush}"/>
                </StackPanel>
            </ui:Button>
        </Grid>


        <Grid x:Name="MenuInstaller" Grid.Row="0" Grid.RowSpan="5" 
              HorizontalAlignment="Center" VerticalAlignment="Center" 
              Width="254" Height="206" Visibility="Hidden">

            <Border Background="{DynamicResource MainBackgroundBrush}" CornerRadius="14" Margin="-298,-162,-298,-192" Panel.ZIndex="-1" MouseDown="CloseMenu_MouseDown" Opacity="0.8"/>

            <Grid>
                <Border BorderThickness="1" Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="14"/>

                <Border x:Name="DowloadMod" BorderThickness="1" HorizontalAlignment="Center" Height="29" Margin="0,169,0,0" VerticalAlignment="Top" Width="234" Background="{DynamicResource MainBackgroundButton}" CornerRadius="8" Cursor="Hand" MouseDown="DowloadTXT_MouseDown">
                    <TextBlock x:Name="DowloadTXT" Text="Додати" Foreground="{DynamicResource MainForegroundBrush}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="18"/>
                </Border>

                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="83" Margin="0,76,0,0" VerticalAlignment="Top" Width="235" CornerRadius="8" Background="{DynamicResource MainBackgroundBrush}">
                    <ListView x:Name="VersionMods" Background="{x:Null}" BorderBrush="{x:Null}" 
                              ScrollViewer.VerticalScrollBarVisibility="Hidden" 
                              ScrollViewer.HorizontalScrollBarVisibility="Hidden" 
                              FontSize="12">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="{x:Type ListViewItem}">
                                <Setter Property="Foreground" Value="{DynamicResource MainForegroundBrush}"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Border>

                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="30" Margin="0,41,0,0" VerticalAlignment="Top" Width="235" CornerRadius="8" Background="{DynamicResource MainBackgroundBrush}">
                    <TextBlock x:Name="GameVersionMinecraft_Копировать" Text="Мод" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource MainForegroundBrush}" FontSize="12" TextTrimming="CharacterEllipsis" Padding="5,0"/>
                </Border>

                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="30" Margin="0,6,0,0" VerticalAlignment="Top" Width="234" CornerRadius="8" Background="{DynamicResource MainBackgroundBrush}">
                    <TextBlock x:Name="TitleModsDowload" Text="Вибір версії моду" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource MainForegroundBrush}" FontSize="14"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</ui:FluentWindow>