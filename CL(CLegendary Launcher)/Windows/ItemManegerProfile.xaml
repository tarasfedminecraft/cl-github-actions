<UserControl x:Name="UserCtr" x:Class="CL_CLegendary_Launcher_.Windows.ItemManegerProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CL_CLegendary_Launcher_.Windows"
             mc:Ignorable="d" Height="50" Width="196">
    <Grid x:Name="MainGird">
        <Border x:Name="FonBorder" BorderThickness="1" Background="{DynamicResource MainBackgroundBrushServer}" CornerRadius="9,9,9,9" Width="196"/>
        <Image x:Name="IconAccountType" RenderOptions.BitmapScalingMode="HighQuality" HorizontalAlignment="Left" Height="42" Margin="5,5,0,0" VerticalAlignment="Top" Width="45" Source="/Assets/big-steve-face-2002298922 2.png" Stretch="Fill"/>
        <TextBlock x:Name="NameAccount" HorizontalAlignment="Left" Margin="50,5,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Foreground="{DynamicResource MainForegroundBrush}" Width="126" Height="38" FontFamily="Inter 18pt 18pt" FontSize="11"/>
        <Image x:Name="DeleteAccount" HorizontalAlignment="Left" RenderOptions.BitmapScalingMode="HighQuality" Height="20" Margin="173,28,0,0" VerticalAlignment="Top" Width="20" Source="/Assets/delete_1000dp_E8EAED_FILL0_wght400_GRAD0_opsz48.png" Stretch="UniformToFill" Cursor="Hand" ToolTip="Видалити" RenderTransformOrigin="0.476,0.188"/>
        <Grid x:Name="ClickSelectAccount" HorizontalAlignment="Left" Height="50" VerticalAlignment="Center" Width="170" Cursor="Hand" Background="#00000000"/>
    </Grid>
</UserControl>
